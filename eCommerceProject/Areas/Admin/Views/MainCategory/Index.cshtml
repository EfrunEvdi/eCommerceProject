@using EntityLayer.Concrete
@model List<MainCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Card header -->
<div class="card-header border-0">
    <h3 class="mb-0">Ana Kategori Tablosu</h3>
</div>
<!-- Dark table -->

<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-dark">
            <tr>

                <th scope="col" class="sort" data-sort="MainCategoryID">#</th>
                <th scope="col" class="sort" data-sort="NameMainCategory">Ana Kategori İsmi :</th>
                <th scope="col" class="sort" data-sort="ImageUrlMainCategory">Ana Kategori Resmi :</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.MainCategoryID</th>
                    <td class="budget">@item.NameMainCategory</td>
                    <td class="budget">@item.ImageUrlMainCategory</td>
                    <td> <a href="/Admin/MainCategory/DeleteMainCategory/@item.MainCategoryID" class="btn btn-danger">Sil</a></td>   @*Silme ve güncelleme işlemi için id gönderiyoruz*@
                    <td> <a href="/Admin/MainCategory/EditMainCategory/@item.MainCategoryID" class="btn btn-info">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Admin/MainCategory/AddMainCategory/" class="btn btn-success">Yeni Ana Kategori Ekle</a>
</div>


