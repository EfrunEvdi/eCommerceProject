@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = "MyAdverts";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="ads-grid py-sm-5 py-4">
    <div class="container py-xl-4 py-lg-2">
        <!-- tittle heading -->
        <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
            <span class="font-weight-normal">
                Hoşgeldin <b>Efrun</b> !
            </span>
        </h3>
        <!-- //tittle heading -->
        <div class="row">
            <!-- product right -->
            <div class="col-lg-3 mt-lg-0 mt-4 p-lg-0 order-lg-first order-last">
                <div class="side-bar p-sm-4 p-3">
                    <!-- reviews -->
                    <div class="customer-rev left-side py-2">
                        <h3 class="agileits-sear-head mb-3"><a href="/Profile/MyAdverts">İLANLARIM</a></h3>
                    </div>

                    <div class="range py-2">
                        <h3 class="agileits-sear-head mb-3"><a href="/Profile/MyGet">ALDIKLARIM</a></h3>
                    </div>

                    <div class="left-side py-2">
                        <h3 class="agileits-sear-head mb-3"><a href="/Profile/MySell">SATTIKLARIM</a></h3>
                    </div>

                    <div class="left-side py-2">
                        <h3 class="agileits-sear-head mb-3"><a href="#">BİLDİRİMLER</a></h3>
                    </div>

                    <div class="left-side py-2">
                        <h3 class="agileits-sear-head mb-3"><a href="/Profile/MyProfile">PROFİLİM</a></h3>
                    </div>

                    <div class="left-side py-2">
                        <h3 class="agileits-sear-head mb-3"><a href="#">ÇIKIŞ YAP!</a></h3>
                    </div>
                </div>
            </div>
            <!-- product right -->
            <div class="agileinfo-ads-display col-lg-9 order-lg-last order-first">
                <div class="wrapper">
                    <!-- first section -->
                    <div class="product-sec1 px-lg-4">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                @if (item.SellTraderID == 3 && item.StatusProduct == true)
                                {
                                    <div class="col-md-4 product-men mt-md-0 mt-5">
                                        <div class="men-pro-item simpleCart_shelfItem">
                                            <div class="men-thumb-item text-center">
                                                <img src="@item.ImageUrl1Product" alt="" class="img-fluid">
                                                <div class="men-cart-pro">
                                                    <div class="inner-men-cart-pro">
                                                        <a href="/Product/EditProduct/@item.ProductID" class="link-product-add-cart">
                                                            Düzenle
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="item-info-product text-center mt-2">
                                                <h4 class="pt-1">
                                                    <a href="single.html">@item.NameProduct</a>
                                                </h4>
                                                <div class="info-product-price">
                                                    <span class="item_price">@item.PriceProduct</span>
                                                    <del>(@item.PriceProduct)</del>
                                                </div>
                                                <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                                    <form action="/Product/ProductDetails" method="post">
                                                        <fieldset>
                                                            @*<input type="hidden" name="cmd" value="_cart" />
                                                    <input type="hidden" name="add" value="1" />
                                                    <input type="hidden" name="business" value=" " />
                                                    <input type="hidden" name="item_name"
                                                    value="Samsung Galaxy F62  " />
                                                    <input type="hidden" name="amount" value="@item.PriceProduct" />
                                                    <input type="hidden" name="discount_amount" value="1.00" />
                                                    <input type="hidden" name="currency_code" value="TRY" />
                                                    <input type="hidden" name="return" value=" " />
                                                    <input type="hidden" name="cancel_return" value=" " />*@
                                                            <button type="submit" name="submit" value="Detaya Git"
                                                            class="btn btn-style btn-style-secondary mt-3">
                                                                Detaya Git
                                                            </button>
                                                        </fieldset>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


